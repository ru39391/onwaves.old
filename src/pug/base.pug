                block rightmenu
                    - var rightmenu = [{icon: '#icon-logo', title: 'Вступление'},{icon: '#icon-logo', title: 'Дыхание животом'},{icon: '#icon-logo', title: 'Дыхание огня'},{icon: '#icon-logo', title: 'Шипящий звук «Ф»'},{icon: '#icon-logo', title: 'три упражнения в одном блоке'},{icon: '#icon-logo', title: 'Дыхательный квадрат'},{icon: '#icon-logo', title: 'Шипящие звуки на 4 счета'},{icon: '#icon-logo', title: 'Губошлёп'},{icon: '#icon-logo', title: 'Мычание'},{icon: '#icon-logo', title: 'Природный стон'}];
                    nav.rightmenu
                        header.rightmenu__header
                            .rightmenu__title Плейлист
                        .rightmenu__wrapper
                            a.rightmenu__item.rightmenu__item_current(href="#")
                                span.rightmenu__picture
                                    img.img-fluid(src="../img/content/logo.png" alt="")
                                | Первая волна
                            a.rightmenu__item(href="#")
                                span.rightmenu__picture.rightmenu__bordered
                                    svg.icon-fluid
                                        use(xlink:href="#icon-test")
                                | Проверочный тест первой недели
                            div.rightmenu__item.rightmenu__item_blocked
                                span.rightmenu__picture
                                    img.img-fluid(src="../img/content/logo.png" alt="")
                                | Упражнение акторов театра «КАБУКИ»
                            div.rightmenu__item.rightmenu__item_blocked
                                span.rightmenu__picture
                                    img.img-fluid(src="../img/content/logo.png" alt="")
                                | Танцевальная медитация
                            a.rightmenu__item(href="#")
                                span.rightmenu__picture.rightmenu__bordered
                                    svg.icon-fluid
                                        use(xlink:href="#icon-award")
                                | Диплом
                            each rightmenu__item in rightmenu
                                a.rightmenu__item(href="#")
                                    span.rightmenu__picture
                                        svg.icon-fluid
                                            use(xlink:href=(rightmenu__item.icon))
                                    | #{rightmenu__item.title}

                include includes/base/footer.pug

    include includes/account/modal.pug

    .modal.modal_custom.fade(id="error" tabindex="-1" role="dialog" aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header.modal-header_column
                    .modal-title.modal-title_flex.modal-title_error
                        svg.modal__icon
                            use(xlink:href="#icon-danger")
                        | Что-то
                        br
                        | пошло не так
                .modal-body.text-center
                    p.text-colored Текст сообщения
                footer.modal-footer.text-center
                    button.btn.btn_regular.btn_inverse(type="button" data-dismiss="modal" aria-label="Close") ОК

    .modal.modal_custom.fade(id="success" tabindex="-1" role="dialog" aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header.modal-header_column
                    .modal-title.modal-title_flex.modal-title_success
                        svg.modal__icon
                            use(xlink:href="#icon-success")
                        | Действие
                        br
                        | успешно завершено
                .modal-body.text-center
                    p.text-colored Текст сообщения
                footer.modal-footer.text-center
                    button.btn.btn_regular.btn_inverse(type="button" data-dismiss="modal" aria-label="Close") ОК

    .modal.modal_custom.fade(id="info" tabindex="-1" role="dialog" aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header.modal-header_column
                    .modal-title.modal-title_flex
                        svg.modal__icon
                            use(xlink:href="#icon-info")
                        | Информационное
                        br
                        | сообщение
                .modal-body.text-center
                    p.text-colored Текст сообщения
                footer.modal-footer.text-center
