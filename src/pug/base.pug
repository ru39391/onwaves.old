block meta
  - var title = '';

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title Личный кабинет / #{title}
    meta(name="keywords" content="")
    meta(name="description" content="")

    link(href="../img/favicon.ico" rel="shortcut icon")

  body
    .icons
    block panel
        .panel
            .panel__top
                header.panel__header
                    .panel__user
                        .panel__user-picture
                            img.img-fluid(src="../img/content/userpic.jpg" alt="")
                        .panel__user-title Владимир
                    a.panel__logout(href="#")
                        svg.icon-fluid
                            use(xlink:href="#icon-logout")
                .panel__bookmark
                    a.btn.btn_icon(href="#")
                        svg.btn__icon
                            use(xlink:href="#icon-bookmark")
                nav.panel__menu
                    a.panel__menu-item.panel__menu-item_current(href="#")
                        span.panel__menu-icon
                            svg.icon-fluid
                                use(xlink:href="#icon-profile")
                        span.panel__menu-title Редактировать профиль
                    a.panel__menu-item(href="#")
                        span.panel__menu-icon
                            svg.icon-fluid
                                use(xlink:href="#icon-courses")
                        span.panel__menu-title Курсы
                    a.panel__menu-item(href="#")
                        span.panel__menu-icon
                            svg.icon-fluid
                                use(xlink:href="#icon-payment")
                        span.panel__menu-title Платежи
            footer.panel__footer
                .panel__logo
                    svg.icon-fluid
                        use(xlink:href="#icon-logo-vertical")
    .page
        block sidebar
            .sidebar
                header.sidebar__header
                    a.btn.btn_md.btn_flex(href="#")
                        svg.btn__icon
                            use(xlink:href="#icon-bookmark")
                        | Продолжить с закладки
                .sidebar__wrapper
                    nav.leftmenu
                        .leftmenu__item.leftmenu__item_category
                            button.leftmenu__toggler(type="button")
                                svg.leftmenu__icon
                                    use(xlink:href="#icon-arrow")
                            a.leftmenu__link(href="#") Базовые курсы
                        .leftmenu__children
                            .leftmenu__item.leftmenu__item_nopx
                                a.leftmenu__link(href="#") Пробное занятие
                            .leftmenu__item
                                button.leftmenu__toggler(type="button")
                                    svg.leftmenu__icon
                                        use(xlink:href="#icon-arrow")
                                a.leftmenu__link(href="#") Первая волна
                            .leftmenu__children
                                .leftmenu__item.leftmenu__item_locked
                                    button.leftmenu__toggler(type="button")
                                        svg.leftmenu__icon
                                            use(xlink:href="#icon-arrow")
                                    a.leftmenu__link(href="#") 1 неделя
                                        svg.leftmenu__locked
                                            use(xlink:href="#icon-lock")
                                .leftmenu__children
                                    .leftmenu__item.leftmenu__item_locked
                                        a.leftmenu__link(href="#") 1 день
                                            svg.leftmenu__locked
                                                use(xlink:href="#icon-lock")
                                    .leftmenu__item.leftmenu__item_locked
                                        a.leftmenu__link(href="#") 2 день
                                            svg.leftmenu__locked
                                                use(xlink:href="#icon-lock")
                                    .leftmenu__item.leftmenu__item_locked
                                        a.leftmenu__link(href="#") 3 день
                                            svg.leftmenu__locked
                                                use(xlink:href="#icon-lock")
                                .leftmenu__item.leftmenu__item_nopx
                                    a.leftmenu__link(href="#") 2 неделя
                                .leftmenu__item.leftmenu__item_nopx
                                    a.leftmenu__link(href="#") 3 неделя
                            .leftmenu__item
                                button.leftmenu__toggler(type="button")
                                    svg.leftmenu__icon
                                        use(xlink:href="#icon-arrow")
                                a.leftmenu__link(href="#") Вторая волна
                            .leftmenu__item
                                button.leftmenu__toggler(type="button")
                                    svg.leftmenu__icon
                                        use(xlink:href="#icon-arrow")
                                a.leftmenu__link(href="#") Третья волна

                        .leftmenu__item.leftmenu__item_category
                            button.leftmenu__toggler(type="button")
                                svg.leftmenu__icon
                                    use(xlink:href="#icon-arrow")
                            a.leftmenu__link(href="#") Спецкурсы
                button.sidebar__toggler(type="button")
                    svg.icon-fluid
                        use(xlink:href="#icon-arrow")

        block wrapper
            .wrapper.wrapper_row
                .content.content_sm.content_column
                    header.content__header
                        .content__title #{title}
                        button.content__toggler.show-tooltip(type="button")
                            svg.icon-fluid
                                use(xlink:href="#icon-faq")
